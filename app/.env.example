# Root .env example (Windows/local)
# Copy to .env and adjust. Do not commit credentials.json.

SPREADSHEET_NAME=seguimiento
HEADLESS=true
TZ=America/Bogota
DAILY_REPORT_PREFIX=Informe_

# Optional (Drive ingestion)
DRIVE_FOLDER_ID=
DRIVE_FOLDER_INDIVIDUAL_FILE=

# Linux/advanced scraper flags (some also read in root flows)
DEBUG_SCRAPER=false
BLOCK_RESOURCES=true
SLOW_MO=100
TIMEOUT_MS=60000

# Optional proxy
# PROXY_SERVER=socks5://host:port
# PROXY_USERNAME=
# PROXY_PASSWORD=
